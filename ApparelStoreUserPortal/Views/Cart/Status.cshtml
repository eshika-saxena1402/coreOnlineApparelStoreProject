@model ApparelStoreUserPortal.Models.Customers
@{
    ViewData["Title"] = "Status";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h2>Order recorded successfully</h2>
<div class="container">
    <div class="card">
        <div class="card-header">
            Invoice
            <strong>@DateTime.Now</strong>
            <span class="float-right"> <strong>Status:</strong> Confirmed</span>

        </div>
        <div class="card-body">

            <div class="row mb-4">
                <div class="col-sm-6">

                    <h6 class="mb-3" class="strong">Billing Address:</h6>

                    <div>
                    </div>
                    <div>@ViewBag.Customers.CustomerFirstName @ViewBag.Customers.CustomerLastName</div>
                    <div>@ViewBag.Customers.Address</div>
                    @*<div>@ViewBag.Customers.Address2</div>*@
                    <div>@ViewBag.Customers.Country</div>
                    <div>@ViewBag.Customers.State</div>
                    <div>@ViewBag.Customers.ZipCode</div>


                </div>
            </div>

            <div class="table-responsive-sm">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th class="center">#</th>
                            <th>Item</th>
                            <th>Description</th>

                            <th class="right">Unit Cost</th>
                            <th class="center">Qty</th>
                            <th class="right">Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in ViewBag.cart)
                        {
                            <tr>
                                <td class="center">1</td>
                                <td class="left strong">@item.Products.ProductName</td>
                                <td class="left">@item.Products.ProductDescription</td>

                                <td class="right">@item.Products.ProductPrice</td>
                                <td class="center">@item.ItemQuantity</td>
                                <td class="right">@(item.Products.ProductPrice * item.ItemQuantity)</td>
                            </tr>

                        }

                    </tbody>
                </table>
            </div>
            <div class="row">
                <div class="col-lg-4 col-sm-5">

                </div>

                <div class="col-lg-4 col-sm-5 ml-auto">
                    <table class="table table-clear">
                        <tbody>
                            <tr>
                                <td class="left">
                                    <strong>Subtotal</strong>
                                </td>
                                <td class="right"> @ViewBag.total</td>
                            </tr>
                            <tr>
                                <td class="left">
                                    <strong>Discount (20%)</strong>
                                </td>
                                <td class="right">@ViewBag.discount</td>
                            </tr>
                            @*<tr>
                                    <td class="left">
                                        <strong>VAT (10%)</strong>
                                    </td>
                                    <td class="right"></td>
                                </tr>*@
                            <tr>
                                <td class="left">
                                    <strong>Total</strong>
                                </td>
                                <td class="right">
                                    <strong>@(ViewBag.total - ViewBag.discount)</strong>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                </div>

            </div>

        </div>
    </div>
</div>