@model coreOnlineApparelStoreAdminPortal.Models.Manager
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2>Edit Details of Manager</h2>
<div class="row">
    <div class="col-lg-4">
        &nbsp;
    </div>
    <div class="col-lg-4">
        <form asp-action="Edit" asp-controller="Manager">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ManagerId" />
            <br />
            <div class="form-group">
                <label for="ManagerFirstName">ManagerFirstName</label>
                <input type="text" class="form-control" placeholder="Enter Name" asp-for="ManagerFirstName">
                <span asp-validation-for="ManagerFirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="ManagerLastName">ManagerLastName</label>
                <input type="text" class="form-control" placeholder="Description" asp-for="ManagerLastName">
            </div>
            <div class="form-group">
                <label for="ManagerEmail">ManagerEmail</label>
                <input type="text" class="form-control" placeholder="Description" asp-for="ManagerEmail">
            </div>
            <div class="form-group">
                <label for="ManagerGender">ManagerGender</label>
                <input type="text" class="form-control" placeholder="Description" asp-for="ManagerGender">
            </div>
            <div class="form-group">
                <label for="ManagerAddress">ManagerAddress</label>
                <input type="text" class="form-control" placeholder="Description" asp-for="ManagerAddress">
            </div>
            <div class="form-group">
                <label for="ManagerCountry">ManagerCountry</label>
                <input type="text" class="form-control" placeholder="Description" asp-for="ManagerCountry">
            </div>
            <div class="form-group">
                <label for="ManagerState">ManagerState</label>
                <input type="text" class="form-control" placeholder="Description" asp-for="ManagerState">
            </div>
            <div class="form-group">
                <label for="ManagerZipCode">ManagerZipNumber</label>
                <input type="text" class="form-control" placeholder="Description" asp-for="ManagerZipCode">
            </div>
            <div class="form-group">
                <label for="ManagerPhoneNumber">ManagerPhoneNumber</label>
                <input type="text" class="form-control" placeholder="Description" asp-for="ManagerPhoneNumber">
            </div>
            <div class="form-group">
                <label for="ManagerPassword">ManagerPassword</label>
                <input type="text" class="form-control" placeholder="Description" asp-for="ManagerPassword">
            </div>



            <button type="submit" class="btn btn-primary">Edit</button>
            <a asp-controller="Manager" asp-action="Index"> <button type="submit" class="btn btn-primary">BackToList</button></a>
        </form>
    </div>
    <div class="col-lg-4">
        &nbsp;
    </div>
</div>


