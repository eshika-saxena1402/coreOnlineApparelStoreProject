@model coreOnlineApparelStoreAdminPortal.Models.Customer
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Details of the Customer</h2>

<div class="row">
    <div class="col-lg-4">
        &nbsp;
    </div>
    <div class="col-lg-4">

        <div class="form-group">

            <label for="CustomerFirstName">Customer Fisrt Name</label>
            <input type="text" class="form-control" asp-for="CustomerFirstName">
        </div>
        <div class="form-group">
            <label for="CustomerLastName">Customer Last Name</label>
            <input type="text" class="form-control" asp-for="CustomerLastName">
        </div>
        <div class="form-group">
            <label for="UserName">User Name</label>
            <input type="text" class="form-control" asp-for="UserName">
        </div>
        <div class="form-group">
            <label for="Email">Email</label>
            <input type="text" class="form-control" asp-for="Email">
        </div>
        <div class="form-group">
            <label for="PhoneNumber">Phone Number</label>
            <input type="text" class="form-control" asp-for="PhoneNumber">
        </div>
        <div class="form-group">
            <label for="AlternatePhoneNumber">Alternate Phone Number</label>
            <input type="text" class="form-control" asp-for="AlternatePhoneNumber">
        </div>
        <div class="form-group">
            <label for="Gender">Gender</label>
            <input type="text" class="form-control" asp-for="Gender">
        </div>
        <div class="form-group">
            <label for="Password">Password</label>
            <input type="text" class="form-control" asp-for="Password">
        </div>
        <div class="form-group">
            <label for="Country">Country</label>
            <input type="text" class="form-control" asp-for="Country">
        </div>
        <div class="form-group">
            <label for="State">State</label>
            <input type="text" class="form-control" asp-for="State">
        </div>
        <div class="form-group">
            <label for="State2">Alternate State</label>
            <input type="text" class="form-control" asp-for="State2">
        </div>
        <div class="form-group">
            <label for="Country2">Alternate Country</label>
            <input type="text" class="form-control" asp-for="Country2">
        </div>
        <div class="form-group">
            <label for="ZipCode">Zip Number</label>
            <input type="text" class="form-control" asp-for="ZipCode">
        </div>
        <div class="form-group">
            <label for="ZipCode2">Alternate Zip Number</label>
            <input type="text" class="form-control" asp-for="ZipCode2">
        </div>
        <div class="form-group">
            <label for="Address">Address </label>
            <input type="text" class="form-control" asp-for="Address">
        </div>
        <div class="form-group">
            <label for="Address2">Alternate Address</label>
            <input type="text" class="form-control" asp-for="Address2">
        </div>
        <a asp-controller="Customer" asp-action="Index"><button type="submit" class="btn btn-primary"> BackToList</button></a>

    </div>
    <div class="col-lg-4">
        &nbsp;
    </div>
</div>

