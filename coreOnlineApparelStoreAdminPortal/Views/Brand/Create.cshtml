@model coreOnlineApparelStoreAdminPortal.Models.Brand
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Creating New Brand</h2>
<div class="row">
    <div class="col-lg-4">
        &nbsp;
    </div>
    <div class="col-lg-4">
        <form asp-action="Create" asp-controller="Brand">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BrandId" />
            <br />
            <div class="form-group">
                <label for="BrandName">BrandName</label>
                <input type="text" class="form-control" placeholder="Enter Name" asp-for="BrandName">
                <span asp-validation-for="BrandName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="BrandDescription">BrandDescription</label>
                <input type="text" class="form-control" placeholder="Description" asp-for="BrandDescription">
            </div>

            <button type="submit" class="btn btn-primary">Create</button>

        </form>
        <a asp-controller="Brand" asp-action="Index"><button type="submit" class="btn btn-primary">BackToList</button></a>
    </div>
    <div class="col-lg-4">
        &nbsp;
    </div>
</div>
