@model coreOnlineApparelStoreAdminPortal.Models.Brand
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>Are You Sure You Want To Delete</h3>
<div class="row">
    <div class="col-lg-4">
        &nbsp;
    </div>
    <div class="col-lg-4">
        <div class="form-group">
            <div class="form-group">


                <input type="hidden" class="form-control" asp-for="BrandId">
            </div>
            <div class="form-group">

                <label for="BrandName">BrandName</label>
                <input type="text" class="form-control" asp-for="BrandName">
            </div>
            <div class="form-group">
                <label for="BrandDescription">BrandDescription</label>
                <input type="text" class="form-control" asp-for="BrandDescription">
            </div>

            <form asp-action="Delete" asp-controller="Brand">
                <button type="submit" class="btn btn-primary">Delete</button>
            </form>
            <a asp-controller="Brand" asp-action="Index"><button type="submit" class="btn btn-primary">BackToList</button></a>
        </div>
        <div class="col-lg-4">
            &nbsp;
        </div>
    </div>
