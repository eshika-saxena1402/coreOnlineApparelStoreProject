@model coreOnlineApparelStoreAdminPortal.Models.Order
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Details of the Order</h2>

<div class="row">
    <div class="col-lg-4">
        &nbsp;
    </div>
    <div class="col-lg-4">

        <div class="form-group">
            <label for="OrderId">OrderId</label>
            <div class="form-control">
                @Html.DisplayFor(m => m.OrderId)
            </div>
            @*<input type="text" class="form-control" asp-for="CategoryId" />*@
            <br />
            <label for="OrderDate">OrderDate</label>
            <div class="form-control">
                @Html.DisplayFor(m => m.OrderDate)
            </div>
            @*<input type="text" class="form-control" asp-for="CategoryName" />*@
        </div>
        <div class="form-group">
            <label for="OrderAmount">OrderAmount</label>
            <div class="form-control">
                @Html.DisplayFor(m => m.OrderAmount)
            </div>
            @*<input type="text" class="form-control" asp-for="CategoryDescription" />*@
        </div>
        <div class="form-group">
            <label for="CustomerId">CustomerId</label>
            <div class="form-control">
                @Html.DisplayFor(m => m.CustomerId)
            </div>
            @*<input type="text" class="form-control" asp-for="CategoryDescription" />*@
        </div>
        <a asp-controller="Order" asp-action="Index"><button type="submit" class="btn btn-primary"> BackToList</button></a>

    </div>
    <div class="col-lg-4">
        &nbsp;
    </div>
</div>



